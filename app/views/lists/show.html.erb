<h1><%= @list.name %></h1>

<%= link_to "Add Movie to List", new_list_bookmark_path(@list), class: "btn btn-primary btn-lg" %>
<%= link_to "Back", lists_path  %>
<%= link_to "Delete List", destroy_list_path(@list), method: :delete %>

<div class="container"></div>
  <% @list.movies.each do |movie| %>
    <div class="movie-card">
      <img class="movie-image" src="<%= movie.poster_url %>" alt="">
      <h3><%= movie.title %></h3>
      <%= link_to "Remove", bookmark_path(@list.bookmarks.where(movie: movie)[0]), method: :delete %>
    </div>
   <% end %>
</div>